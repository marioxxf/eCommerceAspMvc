@{
    ViewBag.Title = "Autenticacao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<style>
    .container {
        width: 50vw;
        height: 65vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    .centraliza {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }
</style>

<div id="divCadastro">
    <div class="container">
        <div class="jumbotron">
            <div class="centraliza">
                <h2 class="display-4" style="color: white;">Cadastro</h2>
            </div>
            <form action="/autenticacao/criar" method="post">
                <div class="form-group">
                    <label style="color: #A54ED6;">Usuário</label>
                    <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Insira seu nome de usuário">
                </div>

                <div class="form-group">
                    <label style="color: #A54ED6;">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Insira seu e-mail">
                </div>
                <div class="form-group">
                    <label style="color: #A54ED6;"> Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Insira sua senha">
                    <small id="emailHelp" class="form-text text-muted">Nunca compartilhe sua senha com alguém.</small>
                </div>
                <div class="centraliza">
                    <button type="submit" class="btn btn-primary" style="background-color: white; color: black; border-color: white">Cadastro</button>
                </div>
            </form>
        </div>
    </div>
</div>